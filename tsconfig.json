{
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",
		"target": "es2022",
		"module": "node16",
		"moduleResolution": "node16",
		"incremental": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"paths": {
			"~/*": ["./src/*"]
		}
	}
}